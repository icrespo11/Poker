@model Capstone.Web.Models.UserModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>

    <h2>Login</h2>

    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        <div class="errorMessage field-validation-error">
            @{
                if (Model.LoginFail)
                {
                    <p>Username or password is invalid.</p>
                }
            }
        </div>

        <div class="inputBox">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username)
        </div>
        <div class="inputBox">
            @Html.LabelFor(m => m.LoginPassword, "Password")
            @Html.PasswordFor(m => m.LoginPassword)
        </div>
        <button>Login</button>
    }

</section>