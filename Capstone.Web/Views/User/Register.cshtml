@model Capstone.Web.Models.UserModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div id="allInputs">
        <h2>Register</h2>

        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
            <div class="errorMessage validationError">
                @{
                    if (Model.IsTaken)
                    {
                        <p>Username is unavailable. Please select a different one.</p>
                    }
                }
                @Html.ValidationSummary()
            </div>

            <div class="inputBox">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { placeHolder = "Username", @class = "inputField" })
            </div>

            <div class="inputBox">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "inputField", placeHolder = "Password"})
            </div>


            <div class="inputBox">
                @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password")
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeHolder = "Confirm Password", @class = "inputField" })
            </div>

            <div id="inputButton">

                <button>Create Account</button>
            </div>
                    }
    </div>

</section>